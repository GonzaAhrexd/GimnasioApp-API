{
  "openapi": "3.0.0",
  "info": {
    "title": "Gimnasio API",
    "description": "API documentation para el sistema de gimnasio",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Endpoints de autenticación"
    },
    {
      "name": "Users",
      "description": "Endpoints de usuarios"
    },
    {
      "name": "Profesores",
      "description": "Endpoints de profesores"
    }
  ],
  "paths": {
    "/api/users/": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Obtener usuarios",
        "description": "Obtiene la lista de todos los usuarios",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "post": {
        "tags": [
          "Users"
        ],
        "summary": "Crear usuario",
        "description": "Crea un nuevo usuario en el sistema",
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/users/search": {
      "get": {
        "tags": [
          "Users"
        ],
        "summary": "Búsqueda avanzada",
        "description": "Realiza una búsqueda avanzada de usuarios (solo admin)",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/users/{id_usuario}": {
      "put": {
        "tags": [
          "Users"
        ],
        "summary": "Editar usuario",
        "description": "Edita un usuario existente por su ID",
        "parameters": [
          {
            "name": "id_usuario",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      },
      "delete": {
        "tags": [
          "Users"
        ],
        "summary": "Eliminar usuario",
        "description": "Elimina un usuario por su ID",
        "parameters": [
          {
            "name": "id_usuario",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "No Content"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/profesores/": {
      "get": {
        "tags": [
          "Profesores"
        ],
        "summary": "Obtener profesores",
        "description": "Obtiene la lista de todos los profesores",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Iniciar sesión",
        "description": "Autentica un usuario y devuelve un token",
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "email": {
                    "example": "any"
                  },
                  "pass": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/register": {
      "post": {
        "tags": [
          "Auth"
        ],
        "summary": "Registrar usuario",
        "description": "Registra un nuevo usuario en el sistema",
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "rol": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/change-pass/{id_usuario}": {
      "put": {
        "tags": [
          "Auth"
        ],
        "summary": "Cambiar contraseña (primer login)",
        "description": "Permite cambiar la contraseña en el primer inicio de sesión",
        "parameters": [
          {
            "name": "id_usuario",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal Server Error"
          }
        },
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "currentPassword": {
                    "example": "any"
                  },
                  "newPassword": {
                    "example": "any"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/reset-password/{id_usuario}": {
      "put": {
        "tags": [
          "Auth"
        ],
        "summary": "Restablecer contraseña",
        "description": "Restablece la contraseña de un usuario (solo admin)",
        "parameters": [
          {
            "name": "id_usuario",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        }
      }
    },
    "/api/logout": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Cerrar sesión",
        "description": "Cierra la sesión del usuario actual",
        "responses": {
          "200": {
            "description": "OK"
          },
          "500": {
            "description": "Internal Server Error"
          }
        }
      }
    },
    "/api/test": {
      "get": {
        "tags": [
          "Auth"
        ],
        "summary": "Test de autenticación",
        "description": "Endpoint de prueba para verificar autenticación admin",
        "responses": {
          "200": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden"
          }
        }
      }
    }
  }
}